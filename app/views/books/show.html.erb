<div class="relative flex size-full min-h-screen flex-col bg-slate-50 group/design-root overflow-x-hidden" style='font-family: "Public Sans", "Noto Sans", sans-serif;'>
  <div class="layout-container flex h-full grow flex-col">
    <header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-b-[#e7edf4] px-10 py-3">
      <div class="flex items-center gap-8">
        <div class="flex items-center gap-4 text-[#0d141c]">
          <div class="size-4">
          </div>
          <h2 class="text-[#0d141c] text-lg font-bold leading-tight tracking-[-0.015em]">HomeLibrary</h2>
        </div>
      </div>
    </header>
    <div class="px-40 flex flex-1 justify-center py-5">
      <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
        <div class="flex flex-wrap justify-between gap-3 p-4">
          <% if @book.cover_image.attached? %>
            <%= image_tag @book.cover_image, class: "w-full h-auto" %>
          <% end %>
          <p class="text-[#0d141c] tracking-light text-[32px] font-bold leading-tight min-w-72"><%= @book.title %></p>
        </div>
        <div class="p-4">
          <p><strong>Author:</strong> <%= @book.author %></p>
          <p><strong>Genre:</strong> <%= @book.genre %></p>
          <p><strong>Pages:</strong> <%= @book.pages %></p>
        </div>
        <div class="p-4">
          <%= link_to 'Edit', edit_book_path(@book), class: "text-[#49719c]" %> |
          <%= link_to 'Back to books', books_path, class: "text-[#49719c]" %>
        </div>
      </div>
    </div>
  </div>
</div>
